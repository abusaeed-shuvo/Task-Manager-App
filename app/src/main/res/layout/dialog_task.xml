<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:background = "?attr/colorSurface"
	android:elevation = "15dp"
	android:orientation = "vertical"
	android:padding = "20dp">

	<com.google.android.material.imageview.ShapeableImageView
		android:id = "@+id/iv_status_icon"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_gravity = "center"
		android:layout_margin = "4dp"
		android:src = "@drawable/ic_timer" />

	<TextView
		android:id = "@+id/dialog_task_title"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginVertical = "2dp"
		android:text = "Title"
		android:textAlignment = "center"
		android:textAppearance = "@style/TextAppearance.Material3.TitleLarge" />


	<ScrollView
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:padding = "8dp">


		<TextView
			android:id = "@+id/dialog_task_description"

			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:layout_marginVertical = "2dp"
			android:text = "Desc"
			android:textAlignment = "viewStart"
			android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />


	</ScrollView>

	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:orientation = "horizontal"
		android:padding = "8dp">

		<TextView
			android:id = "@+id/dialog_task_due_date"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_marginVertical = "2dp"
			android:layout_weight = "1"
			android:text = "Due Date:"
			android:textAlignment = "viewStart"
			android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />

		<TextView
			android:id = "@+id/dialog_task_status"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_marginVertical = "2dp"
			android:layout_weight = "1"
			android:text = "Status"
			android:textAlignment = "viewStart"
			android:textAppearance = "@style/TextAppearance.Material3.TitleMedium" />

	</LinearLayout>


	<LinearLayout

		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "10dp"
		android:gravity = "center_horizontal">

		<com.google.android.material.button.MaterialButton
			android:id = "@+id/btn_dialog_edit"
			style = "@style/ShapeAppearance.Material3.MediumComponent"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_weight = "1"
			android:gravity = "center"
			android:text = "Edit"
			android:textAppearance = "@style/TextAppearance.Material3.TitleMedium"
			app:icon = "@drawable/ic_edit" />


		<com.google.android.material.button.MaterialButton
			android:id = "@+id/btn_dialog_change_status"
			style = "@style/ShapeAppearance.Material3.MediumComponent"
			android:layout_width = "0dp"
			android:layout_height = "wrap_content"
			android:layout_weight = "1"
			android:gravity = "center"
			android:text = "Toggle"
			android:textAppearance = "@style/TextAppearance.Material3.TitleMedium"
			app:icon = "@drawable/ic_sync" />

	</LinearLayout>


</LinearLayout>